<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.Techbus.ipinioapp.JobDetail"
    android:orientation="vertical"
    android:background="@color/primary"
    android:padding="85dp">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Job ID"
        android:id="@+id/JobID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="40dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/Location"
        android:textColor="@color/white"
        android:layout_below="@+id/JobID"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time to Reach"
        android:id="@+id/time"
        android:textColor="@color/white"
        android:layout_below="@+id/Location"
        android:layout_alignLeft="@+id/JobID"
        android:layout_alignStart="@+id/JobID" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Job"
        android:id="@+id/AcceptJob"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/Cancel"
        android:layout_below="@+id/AcceptJob"
        android:layout_centerHorizontal="true" />


</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Started"
        android:id="@+id/StartedBT"

        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:id="@+id/CompletedBT"
        android:visibility="gone" />
    <android.support.v7.widget.AppCompatButton android:id="@+id/findLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:theme="@style/MyButtonred"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="Find Location"/>


</LinearLayout>
